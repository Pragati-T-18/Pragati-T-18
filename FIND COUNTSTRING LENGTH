DATA SEGMENT
   STRING DB "HAPPY$"
   COUNT DB ?
DATA ENDS

CODE SEGMENT
ASSUME CS:CODE,DS:DATA
START:
   MOV DX,DATA
   MOV DS,DX
   LEA SI,STRING
   MOV CL,00H
AGAIN:
   MOV AL,[SI]
   CMP AL,'$'
   JE OUT1
   INC SI
   INC CL
   JMP AGAIN
OUT1: 
   MOV COUNT,CL

   MOV AH,4CH
   INT 21H

 CODE ENDS
 END START
