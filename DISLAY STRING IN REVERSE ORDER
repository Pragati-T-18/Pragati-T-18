DATA SEGMENT
  STRING1 DB "HAPPY$"
  STRING2 DB 10 DUP('$')
  COUNT DB ?
DATA ENDS

CODE SEGMENT
ASSUME CS:CODE,DS:DATA
START:
  MOV DX,DATA
  MOV DS,DX
  MOV CL,00
  LEA SI,STRING1
FIND:
  MOV AL,[SI]
  CMP AL,'$'
  JE OUT1
  INC SI
  INC CL
  JMP FIND
OUT1: 
  LEA DI,STRING2 
  DEC SI 
AGAIN: 
  MOV AL,[SI]
  MOV [DI],AL
  DEC SI
  INC DI
  DEC CL
  JNZ AGAIN 
  LEA DX,STRING2
  MOV AH,09H
  INT 21H
  
  MOV AH,4CH
  INT 21H

 CODE ENDS
 END START
